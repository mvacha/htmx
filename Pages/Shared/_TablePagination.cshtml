@model TableModel<Plant>
@using Explorations.Models
@{
    var prevOffset = Math.Max(0, Model.Skip - Model.PageSize);
    var nextOffset = Model.HasMoreData ? Model.Skip + Model.PageSize : Model.Skip;
}

<div class="mt-5 mb-10 flex">
    <!-- Previous Button -->
    <a asp-route-search=@Model.Search
       asp-route-orderBy=@Model.OrderBy
       asp-route-orderDescending=@Model.OrderDescending
       asp-route-skip="@prevOffset"
        class="inline-flex items-center px-4 py-2 mr-3 text-sm font-medium text-gray-500 @btnStyle(Model.Skip > 0) border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        <svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
        Previous
    </a>
    <a asp-route-search=@Model.Search
       asp-route-orderBy=@Model.OrderBy
       asp-route-orderDescending=@Model.OrderDescending
       asp-route-skip="@nextOffset"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 @btnStyle(Model.HasMoreData) border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        Next
        <svg aria-hidden="true" class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    </a>
</div>

@functions {
    string btnStyle(bool isEnabled) => isEnabled ? "bg-white" : "bg-gray-100 cursor-not-allowed";
}